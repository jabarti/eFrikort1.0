            <soap:operation soapAction='urn:com:logica:se:healthcare:efrikort:administration:GroupPersonResponder:1:GroupPerson' style='document' />
            <wsdl:input>
                <soap:header use='literal' message='tns:GroupPersonRequest' part='LogicalAddress' />
                <soap:body use='literal' parts='parameters' />
            </wsdl:input>
            <wsdl:output>
                <soap:body use='literal' />
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name='GroupPersonResponderService'>
        <wsdl:port name='GroupPersonResponderPort' binding='tns:GroupPersonResponderBinding'>
            <soap:address location='http://tempuri.org' />
        </wsdl:port>
    </wsdl:service>
