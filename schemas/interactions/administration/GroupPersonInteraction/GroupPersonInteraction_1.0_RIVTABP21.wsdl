<wsdl:definitions name='GroupPersonInteraction'
    xmlns:wsdl='http://schemas.xmlsoap.org/wsdl/'
    xmlns:soap='http://schemas.xmlsoap.org/wsdl/soap/'
    xmlns:xs='http://www.w3.org/2001/XMLSchema'
    xmlns:tjsr='urn:com:logica:se:healthcare:efrikort:administration:GroupPersonResponder:1'
    xmlns:itr='urn:riv:itintegration:registry:1'
    xmlns:tns='urn:com:logica:se:healthcare:efrikort:administration:GroupPerson:1:rivtabp21'
